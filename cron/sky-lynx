# Sky-Lynx Continuous Improvement Agent
# Install: sudo cp /home/ubuntu/projects/sky-lynx/cron/sky-lynx /etc/cron.d/
# Verify: sudo systemctl restart cron && sudo tail -f /var/log/syslog | grep CRON

# Environment
SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# Run weekly on Sundays at 2 AM
0 2 * * 0 ubuntu cd /home/ubuntu/projects/sky-lynx && /home/ubuntu/projects/sky-lynx/.venv/bin/python -m sky_lynx.analyzer >> /var/log/sky-lynx/analyzer.log 2>&1
